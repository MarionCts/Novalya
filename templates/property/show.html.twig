{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ property.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ property.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ property.description }}</td>
            </tr>
            <tr>
                <th>RoomsTotal</th>
                <td>{{ property.roomsTotal }}</td>
            </tr>
            <tr>
                <th>BathroomNumber</th>
                <td>{{ property.bathroomNumber }}</td>
            </tr>
            <tr>
                <th>BedroomNumber</th>
                <td>{{ property.bedroomNumber }}</td>
            </tr>
            <tr>
                <th>IndoorSurface</th>
                <td>{{ property.indoorSurface }}</td>
            </tr>
            <tr>
                <th>OutdoorSurface</th>
                <td>{{ property.outdoorSurface }}</td>
            </tr>
            <tr>
                <th>EnergyClass</th>
                <td>{{ property.energyClass }}</td>
            </tr>
            <tr>
                <th>ClimateClass</th>
                <td>{{ property.climateClass }}</td>
            </tr>
            <tr>
                <th>MapUrl</th>
                <td>{{ property.mapUrl }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ property.price }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ property.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ property.modifiedAt ? property.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_property_index') }}">back to list</a>

    <a href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
