{% extends 'base.html.twig' %}

{% block title %}Novalya |
	{{ 'addCategoryPage.pageTitle'|trans }}
{% endblock %}

{% block body %}

	<main class="admin-pages__container px-100">

		<h1 class="title title__secondary mb-55">{{ 'addCategoryPage.mainTitle'|trans }}
			<span class="title title__secondary accent">{{ 'addCategoryPage.mainAccent'|trans }}</span>
		</h1>

		{{ form_start(form) }}

		{{ form_label(form.name) }}
		{{ form_widget(form.name) }}
		{% for error in form.name.vars.errors %}
			<div class="form__constraint">{{ error.message }}</div>
		{% endfor %}

		{{ form_label(form.nameEn) }}
		{{ form_widget(form.nameEn) }}
		{% for error in form.nameEn.vars.errors %}
			<div class="form__constraint">{{ error.message }}</div>
		{% endfor %}

		{# ADD BUTTON #}
		<button class="button button__primary mt-35 panel-button">{{ 'addBtn'|trans }}</button>

		{# GET BACK TO PROPERTIES BUTTON #}
		<a class="button button__secondary panel-button" href="{{ path('app_property_category_index') }}">{{ 'addCategoryPage.getBack'|trans }}</a>

		{{ form_end(form) }}

	</main>

{% endblock %}
