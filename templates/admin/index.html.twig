{% extends 'base.html.twig' %}

{% block title %}Novalya |
	{{ 'panelAdmin.pageTitle'|trans }}
{% endblock %}

{% block body %}

	<main class="admin-pages__container px-100">

		<h1 class="title title__secondary mb-55" id="admin-panel">{{ 'panelAdmin.mainTitle'|trans }}
